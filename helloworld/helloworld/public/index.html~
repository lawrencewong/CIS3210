    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="./js/jquery-1.11.1.min.js"></script>
    <script src="./js/bootstrap.min.js"></script>

    <!-- Clippy.js -->
    <script src="clippy.js/build/clippy.js"></script>

    <!-- Init script -->
    <script type="text/javascript">	
	clippy.load('Links', function(agent) {
	    // Do anything with the loaded agent
	    agent.show();
	    $('#btnArtsy').on('click', function(event) {
	      agent.play('GetArtsy');
	    });
	    $('#btnCheck').on('click', function(event) {
	      agent.play('CheckingSomething');
	    });
	    $('#btnShred').on('click', function(event) {
	      agent.play('EmptyTrash');
	    });
	    $('#btnLaugh').on('click', function(event){
	      var jokes = new Array("What do you get when you cross a cat with a lemon?",
				     "What do you call a pile of kittens?",
				     "What did the cat say when he lost all his money?",
				     "What is a cat's favorite color?",
				     "What do cats eat for breakfast?"
				    );

	      var punchLines = new Array("A sour puss!", 
					  "A meowtain!",
					  "I'm so paw!",
					  "Purrrple!",
					  "Mice Crispies!"
					  );
	      randno = Math.floor( Math.random() * jokes.length );
	      agent.speak(jokes[randno]);
	      agent.speak(".........");
	      agent.speak(punchLines[randno]);
	    });
	});
    </script>
